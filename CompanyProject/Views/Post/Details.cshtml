@{
}
@model Post
<div class="card" style="width: 80%;margin:auto">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Categort</p>
    </div>
    <ul class="list-group list-group-flush">

        <li class="list-group-item">@Model.Body</li>
        <li class="list-group-item">@Model.Likes</li>
        <li class="list-group-item">@Model.Share</li>

    </ul>
    <div class="card-body">
        <a asp-action="Index" class="card-link">Go Back</a>
  
    </div>
</div>