@{
}
@model List<CompanyProject.Models.Post>

<h2>User Posts</h2>

@if (Model.Count == 0)
{
    <p>No posts available.</p>
}
else
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <h3>@post.Title</h3>
                <p>@post.Body</p>
                <p><strong>Likes:</strong> @post.Likes | <strong>Shares:</strong> @post.Share</p>
            </li>
        }
    </ul>
}
