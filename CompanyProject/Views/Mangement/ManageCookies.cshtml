@{
}
@{
    ViewData["Title"] = "Manage Cookies";
}

<h2>Manage Cookies</h2>

@if (ViewBag.Message != null)
{
    <div>@ViewBag.Message</div>
}

<form method="get" asp-action="GetCookies">
    <label for="getCookieName">Cookie Name:</label>
    <input type="text" id="getCookieName" name="cookieName" required />
    <button type="submit" class="btn btn-success">Get Cookie</button>
</form>

<form method="post" asp-action="DeleteCookies">
    <label for="deleteCookieName">Cookie Name:</label>
    <input type="text" id="deleteCookieName" name="cookieName" required />
    <button type="submit" class="btn btn-success">Delete Cookie</button>
</form>

@if (ViewBag.CookieValue != null)
{
    <div>Value of cookie '@ViewBag.CookieName': @ViewBag.CookieValue</div>
}
